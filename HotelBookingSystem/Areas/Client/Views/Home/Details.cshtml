@model HotelBookingSystem.Models.RoomType

<form method="post" asp-action="Summary">
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <input type="hidden" name="roomTypeId" value="@Model.RoomTypeId"/>
    <div class="container pt-4">
        <div class="card border-0 shadow-lg mb-5" style="border-radius: 15px; overflow: hidden;">
            <div class="card-header bg-primary bg-gradient text-white py-3">
                <div class="row justify-content-between align-items-center">
                    <div class="col-md-8">
                        <h2 class="mb-0 fw-bold">@Model.Name</h2>
                        <span class="badge bg-light text-dark mt-2">
                            <i class="bi bi-star-fill"></i> Top Rated
                        </span>
                    </div>
                    <div class="col-md-4 text-md-end mt-2 mt-md-0">
                        <h3 class="fw-bold text-light mb-0">$@Model.PricePerNight</h3>
                        <small class="text-white-50">/per night</small>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                <div class="row">
                    <div class="col-12 col-lg-7 mb-4 mb-lg-0">
                        <div class="p-2 border rounded shadow-sm bg-light">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="img-fluid rounded w-100"
                                     style="object-fit: cover; max-height: 500px;" alt="@Model.Name">
                            }
                            else
                            {
                                <img src="https://placehold.co/800x600?text=No+Image" class="img-fluid rounded w-100" alt="No Image">
                            }
                        </div>
                    </div>
                    <div class="col-12 col-lg-5">
                        <div class="h-100 p-4 border rounded bg-light shadow-sm">

                            <h4 class="text-primary fw-bold mb-3">Room Details</h4>

                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-people-fill fs-4 text-secondary me-3"></i>
                                <div>
                                    <h6 class="mb-0 fw-bold">Max Capacity</h6>
                                    <span class="text-muted">@Model.Capacity Guests</span>
                                </div>
                            </div>
                            <div class="mb-4">
                                <h6 class="fw-bold"><i class="bi bi-card-text me-2"></i>Description:</h6>
                                <p class="text-secondary lh-base">
                                    @Html.Raw(Model.Description)
                                </p>
                            </div>
                            <hr />
                            <div class="row mb-3">
                                <div class="col-6">
                                    <label class="form-label fw-bold">Check-in</label>
                                    <input type="date" name="checkInDate" class="form-control border-0 shadow-sm" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-6">
                                    <label class="form-label fw-bold">Check-out</label>
                                    <input type="date" name="checkOutDate" class="form-control border-0 shadow-sm" value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" />
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="col-12">
                                    <label class="form-label fw-bold">Number of Rooms</label>
                                    <input type="number" min="1" value="1" class="form-control border-0 shadow-sm" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-md-6 pb-1">
                                    <button type="submit" class="btn btn-primary bg-gradient w-100 fw-bold py-2 shadow-sm">
                                        <i class="bi bi-calendar-check me-2"></i> Book Now
                                    </button>
                                </div>
                                <div class="col-12 col-md-6 pb-1">
                                    <a asp-action="Index" class="btn btn-outline-secondary w-100 fw-bold py-2 shadow-sm">
                                        Back to Home
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-white p-4">
                <h5 class="fw-bold mb-3">Amenities</h5>
                <div class="row text-center">
                    <div class="col-3 col-md-2"><i class="bi bi-wifi fs-3 text-primary"></i><p class="small">Free Wifi</p></div>
                    <div class="col-3 col-md-2"><i class="bi bi-tv fs-3 text-primary"></i><p class="small">TV</p></div>
                    <div class="col-3 col-md-2"><i class="bi bi-wind fs-3 text-primary"></i><p class="small">AC</p></div>
                    <div class="col-3 col-md-2"><i class="bi bi-p-square fs-3 text-primary"></i><p class="small">Parking</p></div>
                </div>
            </div>
        </div>
    </div>
</form>
