@model int

<div class="container row pt-4">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Booking Completed!</h1>
        <div class="p-3">
            <i class="bi bi-check-circle text-success" style="font-size: 8rem;"></i>
        </div>
    </div>
    <div class="col-12 text-center" style="color:maroon">
        <br />
        Thank you for booking with us! <br />
        We have received your request and our team will approve it shortly!
        <br />
        <br />
        Your Booking Number is: <strong>#@Model</strong>
    </div>
    <div class="col-12 text-center" style="padding: 20px">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary bg-gradient px-5 mx-2">
            Back to Home
        </a>
        <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-secondary bg-gradient px-5 mx-2">
            My Bookings
        </a>
    </div>
</div>