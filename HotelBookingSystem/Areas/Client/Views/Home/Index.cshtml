@model IEnumerable<HotelBookingSystem.Models.RoomType>

<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://placehold.co/1920x600?text=Welcome+to+Our+Hotel" class="d-block w-100" alt="Hotel" />
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded">
                <h1>Welcome To Royal Hotel</h1>
                <p>Experience luxury like never before.</p>
            </div>
        </div>
    </div>
</div>

<div class="container mt-n5" style="position: relative; z-index: 10;">
    <div class="card shadow border-0">
        <div class="card-body p-4 bg-white rounded">
            <form class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Check-in Date</label>
                    <input type="date" class="form-control">
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">Check-out Date</label>
                    <input type="date" class="form-control">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100 py-2">Check Availability</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container my-5">
    <h2 class="text-center mb-4 text-primary">Our Rooms</h2>
    <div class="row">
        @foreach (var room in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow border-0 h-100">
                    <img src="@room.ImageUrl" class="card-img-top" style="height: 250px; object-fit: cover;" alt="@room.Name">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@room.Name</h5>
                        <p class="card-text text-muted">
                            @Html.Raw(room.Description?.Length > 100 ? room.Description.Substring(0, 100) + "..." : room.Description)
                        </p>
                        <h4 class="text-success">$@room.PricePerNight <span class="fs-6 text-muted">/ night</span></h4>
                    </div>
                    <div class="card-footer bg-white border-0 pb-3">
                        <a asp-action="Details" asp-route-id="@room.RoomTypeId" class="btn btn-outline-primary w-100">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
