@model HotelBookingSystem.Models.RoomType

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary by-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">Update Room Type</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="RoomTypeId" hidden />
            <input asp-for="ImageUrl" hidden />
            <div class="row">
                <div class="col-12 col-md-8">
                    <div class="border p-4 rounded shadow-sm">
                        <div class="mb-3 row">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control border-0 shadow" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Capacity"></label>
                            <input asp-for="Capacity" class="form-control border-0 shadow" />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="PricePerNight"></label>
                            <input asp-for="PricePerNight" class="form-control border-0 shadow" />
                            <span asp-validation-for="PricePerNight" class="text-danger"></span>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Description"></label>
                            <textarea asp-for="Description" class="form-control border-0 shadow" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="col-12 mb-3">
                            <label asp-for="ImageUrl" class="ms-2"></label>
                            <input type="file" name="file" class="form-control border-0 shadow" />
                        </div>

                        <div class="row mt-3">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-danger form-control">Update</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="RoomType" asp-action="Index" class="btn btn-secondary form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-4 mt-3 mt-md-0">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="container p-2 border rounded shadow-sm text-center">
                            <label class="mb-2 fw-bold text-secondary">Current image:</label>
                            <img src="@Model.ImageUrl" width="100%" style="border-radius:5px; object-fit: cover;" />
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            No imahe available
                        </div>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
