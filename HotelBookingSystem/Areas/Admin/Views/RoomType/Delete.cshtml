@model HotelBookingSystem.Models.RoomType

<form method="post">
    <input asp-for="RoomTypeId" hidden />
    <div class="border p-3 my-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Room Type</h2>
            <hr />
        </div>

        <div class="mb-3 row">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>

        <div class="mb-3 row">
            <label asp-for="Capacity"></label>
            <input asp-for="Capacity" disabled class="form-control" />
        </div>

        <div class="mb-3 row">
            <label asp-for="PricePerNight"></label>
            <input asp-for="PricePerNight" disabled class="form-control" />
        </div>

        <div class="mb-3 row">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" disabled class="form-control" rows="3"></textarea>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="RoomType" asp-action="Index" class="btn btn-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>
