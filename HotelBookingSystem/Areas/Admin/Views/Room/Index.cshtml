@model List<Room>
<partial name="_Notification" />
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Room List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Room" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Room
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Room Number</th>
            <th>Room Type</th>
            <th>Floor</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u => u.RoomId))
        {
            <tr>
                <td>@obj.RoomNumber</td>
                <td>@obj.RoomType.Name</td>
                <td>@obj.Flour</td>
                <td>@obj.Status</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Room" asp-action="Edit" asp-route-id="@obj.RoomId" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Room" asp-action="Delete" asp-route-id="@obj.RoomId" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
