@model HotelBookingSystem.Models.Room

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary by-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">Delete Room Type</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="RoomId" hidden />
            <div class="mb-3 row">
                <label asp-for="RoomNumber"></label>
                <input asp-for="RoomNumber" disabled class="form-control border-0 shadow" />
            </div>

            <div class="mb-3 row">
                <label asp-for="Flour"></label>
                <input asp-for="Flour" disabled class="form-control border-0 shadow" />
            </div>

            <div class="mb-3 row">
                <label asp-for="RoomTypeId">Room Type</label>
                <input value="@Model.RoomType.Name" disabled class="form-control border-0 shadow" />
            </div>

            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Room" asp-action="Index" class="btn btn-secondary form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
