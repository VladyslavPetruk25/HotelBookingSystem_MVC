@model HotelBookingSystem.Models.Room

<form method="post">
    <input asp-for="RoomId" hidden />
    <div class="border p-3 my-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Room</h2>
            <hr />
        </div>

        <div class="mb-3 row">
            <label asp-for="RoomNumber"></label>
            <input asp-for="RoomNumber" disabled class="form-control" />
        </div>

        <div class="mb-3 row">
            <label asp-for="Flour"></label>
            <input asp-for="Flour" disabled class="form-control" />
        </div>

        <div class="mb-3 row">
            <label asp-for="RoomTypeId">Room Type</label>
            <select asp-for="RoomTypeId" asp-items="ViewBag.RoomTypeList" disabled class="form-select">
                <option disabled selected>-- Select Room Type --</option>
            </select>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Room" asp-action="Index" class="btn btn-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>
